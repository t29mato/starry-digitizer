{
  "name": "starry-digitizer",
  "version": "0.12.1",
  "private": false,
  "license": "MIT",
  "author": "MATO Tomoya",
  "keywords": [
    "Vue",
    "Vue.js",
    "Data Collection"
  ],
  "main": "dist/starry-digitizer.ssr.js",
  "browser": "dist/starry-digitizer.esm.js",
  "module": "dist/starry-digitizer.esm.js",
  "unpkg": "dist/starry-digitizer.min.js",
  "types": "dist/types/entry.esm.d.ts",
  "files": [
    "dist/*",
    "src/**/*.vue"
  ],
  "sideEffects": false,
  "scripts": {
    "serve": "vue-cli-service serve",
    "lint": "vue-cli-service lint",
    "ssg-build": "vue-cli-service build",
    "prebuild": "rimraf ./dist",
    "build": "cross-env NODE_ENV=production rollup --config build/rollup.config.js",
    "build:ssr": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format cjs",
    "build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es",
    "build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife",
    "postbuild": "rimraf ./dist/types/dev ./dist/types/src/entry.d.ts",
    "prepublishOnly": "yarn build",
    "storybook": "start-storybook -p 6006 -s ./public",
    "build-storybook": "build-storybook",
    "test": "yarn jest"
  },
  "dependencies": {
    "@sentry/tracing": "^6.13.3",
    "@sentry/vue": "^6.13.3",
    "color-diff": "^1.2.0",
    "colorthief": "^2.3.2",
    "core-js": "^3.6.5",
    "vue": "^2.6.11",
    "vuetify": "^2.4.0",
    "vuex": "3",
    "vuex-smart-module": "0.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-typescript": "^7.15.0",
    "@mdi/font": "^6.4.95",
    "@rollup/plugin-alias": "^3.1.5",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-image": "^2.1.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-replace": "^3.0.0",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/vue": "^6.3.12",
    "@types/color-diff": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "@vue/babel-preset-app": "^4.5.15",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^7.0.0-beta.4",
    "jest": "^28.1.1",
    "prettier": "^2.4.1",
    "rollup": "^2.58.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-vue": "5",
    "rollup-plugin-vuetify": "^0.2.4",
    "sass": "~1.32.0",
    "sass-loader": "^10.0.0",
    "ts-node": "^10.8.1",
    "ttypescript": "^1.5.12",
    "typescript": "^4.4.3",
    "vue-cli-plugin-vuetify": "~2.4.2",
    "vue-template-compiler": "^2.6.14",
    "vuetify-loader": "^1.7.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/typescript",
      "prettier",
      "plugin:prettier/recommended",
      "plugin:jest/recommended",
      "plugin:jest/style"
    ],
    "plugins": [
      "jest"
    ],
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": false
        }
      ]
    }
  }
}
